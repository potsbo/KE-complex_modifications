{
    "title": "Change escape key (rev 3)",
    "rules": [
        {
            "description": "Post caps_lock if escape is pressed alone. (rev 2)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("escape", [], ["any"]) %>,
                    "to": <%= to([["escape"]]) %>,
                    "to_if_alone": [
                        {
                            "key_code": "caps_lock",
                            "hold_down_milliseconds": 500
                        }
                    ]
                }
            ]
        },
        {
            "description": "Change fn+escape to eject.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("escape", ["fn"], ["any"]) %>,
                    "to": <%= to([["eject"]]) %>
                }
            ]
        }
    ]
}
