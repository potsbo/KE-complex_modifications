{
    "title": "Change shift key (rev 2)",
    "rules": [
        {
            "description": "Change left_shift to caps_lock if pressed alone (rev 2)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("left_shift", [], ["any"]) %>,
                    "to": <%= to([["left_shift"]]) %>,
                    "to_if_alone": [
                        {
                            "key_code": "caps_lock",
                            "hold_down_milliseconds": 500
                        }
                    ]
                }
            ]
        },
        {
            "description": "Change right_shift to caps_lock if pressed alone",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("right_shift", [], ["any"]) %>,
                    "to": <%= to([["right_shift"]]) %>,
                    "to_if_alone": [
                        {
                            "key_code": "caps_lock",
                            "hold_down_milliseconds": 500
                        }
                    ]
                }
            ]
        },
        {
            "description": "Toggle caps_lock by pressing left_shift + right_shift at the same time",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("left_shift", ["right_shift"], ["caps_lock"]) %>,
                    "to": <%= to([["caps_lock"]]) %>,
                    "to_if_alone": <%= to([["left_shift"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("right_shift", ["left_shift"], ["caps_lock"]) %>,
                    "to": <%= to([["caps_lock"]]) %>,
                    "to_if_alone": <%= to([["right_shift"]]) %>
                }
            ]
        }
    ]
}
