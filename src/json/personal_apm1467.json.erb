{
    "title": "Personal rules (@apm1467)",
    "rules": [
        {
            "description": "Use right_command + J/K to switch between tabs in applications",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("k", ["right_command"], ["caps_lock"]) %>,
                    "to": <%= to([["tab", ["left_control"]]]) %>,
                    "to_after_key_up": <%= to([["vk_none"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("j", ["right_command"], ["caps_lock"]) %>,
                    "to": <%= to([["tab", ["left_control", "left_shift"]]]) %>,
                    "to_after_key_up": <%= to([["vk_none"]]) %>
                }
            ]
        },
        {
            "description": "Change right_option to command + option + shift",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("right_option", [], ["caps_lock"]) %>,
                    "to": <%= to([["left_shift", ["left_option", "left_command"]]]) %>
                }
            ]
        },
        {
            "description": "Change command + option + shift + S to redo with sudo in terminal",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("s", ["shift", "option", "command"], ["caps_lock"]) %>,
                    "to": <%= to([
                        ["up_arrow"],
                        ["a", ["left_control"]],
                        ["s"],
                        ["u"],
                        ["d"],
                        ["o"],
                        ["spacebar"],
                        ["return_or_enter"]
                    ]) %>
                }
            ]
        }
    ]
}
