{
  "title": "Modifiers Alone for potsbo",
  "rules": [
    {
      "description": "Right Shift only to Alt+space to invoke Alfred",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("right_shift", [], ["any"]) %>,
          "to": [
            {
              "key_code": "right_shift",
              "lazy": true
            }
          ],
          "to_if_alone": <%= to([["spacebar", ["option"]]]) %>
        }
      ]
    },
    {
      "description": "Left Shift only to Alt+Shift+Command+space to invoke OmniFocus",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("left_shift", [], ["any"]) %>,
          "to": [
            {
              "key_code": "left_shift",
              "lazy": true
            }
          ],
          "to_if_alone": <%= to([["spacebar", ["option", "shift", "command"]]]) %>
        }
      ]
    },
    {
      "description": "Command key only to invoke lang keys",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("left_command", [], ["any"]) %>,
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": <%= to([["lang2", []]]) %>
        },
        {
          "type": "basic",
          "from": <%= from("right_command", [], ["any"]) %>,
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "to_if_alone": <%= to([["lang1", []]]) %>
        }
      ]
    }
  ]
}
